{
  "name": "smartfollow-desktop",
  "version": "1.0.0",
  "description": "Desktop application for SmartFollow CRM built with Electron and TypeScript",
  "main": "dist/main/main.js",
  "scripts": {
    "build:main": "tsc -p .",
    "build:renderer": "webpack --mode production",
    "build": "npm run build:main && npm run build:renderer",
    "dev:renderer": "webpack --mode development --watch",
    "dev": "npm run build:main && npm run dev:renderer",
    "start": "electron .",
    "package": "electron-packager . SmartFollow --platform=win32 --arch=x64"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "axios": "^1.7.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "typescript": "^5.6.0",
    "ts-loader": "^9.5.0",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.0",
    "style-loader": "^3.3.4",
    "css-loader": "^7.1.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.0"
  },
  "author": "SmartFollow Team",
  "license": "MIT"
}
